<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/jinjufamily"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2CB977"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/topicon"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">
            <Button
                android:id="@+id/menu_return"
                android:layout_marginTop="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/returnbutton"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/place_1"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:src="@drawable/logo_gungang" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="진주시 건강가정 지원센터"
                android:textColor="#2F9D27"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="경상남도 진주시 진양호로 305" />
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/info_bar"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:background="@drawable/border"
                android:backgroundTint="#2CB977"
                app:itemIconTint="#145537"
                app:itemTextColor="#edfbe9"
                app:layout_constraintEnd_toStartOf="@id/info_bar2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:menu="@menu/info_bar" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/info_bar2"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:background="@drawable/border"
                android:backgroundTint="#2CB977"
                app:itemIconTint="#145537"
                app:itemTextColor="#edfbe9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toEndOf="@id/info_bar"
                app:layout_constraintTop_toTopOf="parent"
                app:menu="@menu/info_bar2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <FrameLayout
            android:id="@+id/info_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:id="@+id/info_view"
                android:background="#f7f7f7"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/info_sogae"
                        android:layout_width="match_parent"
                        android:layout_height="600dp"
                        android:orientation="vertical"
                        android:background="@drawable/border">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="소개말"
                            android:gravity="center"
                            android:textSize="25dp"
                            android:textColor="#000000"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="진주시 건강가정 지원센터에서는 개인 및 가족이 겪을 수 있는 다양한 문제를 예방하고 해결하기 위한 각종 교육과 상담 및 가족문화 돌봄, 지역사회 연계 등 다양한 프로그램을 진행하여 지역사회와 이웃사랑 나눔을 함께 하기 위해 다양한 서비스를 제공하고 있습니다. 우리사회의 심각한 가족해체의 문제, 한부모 가정, 조손가정 등 약화되어가고 있는 가족기능을 회복시키기 위하여 욕구가 충족되어지고 많은 참여가 이루어 질 수 있도록 열과 성을 다하여 노력하겠으며, 친절한 미소로서 다시 찾는 센터가 될 것을 약속드립니다. "
                            android:textSize="20dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/info_annae"
                        android:layout_width="match_parent"
                        android:layout_height="600dp"
                        android:orientation="vertical"
                        android:background="@drawable/border">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="조직도"
                            android:gravity="center"
                            android:textSize="25dp"
                            android:textColor="#000000"
                            android:textStyle="bold" />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/gungangorg"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/info_jeonmoon"
                        android:layout_width="match_parent"
                        android:layout_height="600dp"
                        android:orientation="vertical"
                        android:background="@drawable/border">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="25dp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="전문영역 및 상담 프로그램" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="20dp"
                            android:text="전문영역: 가족상담, 부부상담, 부모-자녀상담, 한부모자녀상담\n프로그램:가족돌봄나눔(아이돌봄서비스), 가족교육(부모교육,아버지교육), 가족상담, 가족문화프로그램, 다양한가족통합지원, 지역사회연계, 예비부모교육" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/info_ga"
                        android:layout_width="match_parent"
                        android:layout_height="600dp"
                        android:orientation="vertical"
                        android:background="@drawable/border">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="25dp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="가능한 심리검사" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="20dp"
                            android:text="방문 후 안내" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/info_map"
                        android:layout_width="match_parent"
                        android:layout_height="600dp"
                        android:orientation="vertical"
                        android:background="@drawable/border">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="25dp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="상담소 위치" />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/gungangmap"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>