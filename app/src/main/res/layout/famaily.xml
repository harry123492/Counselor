<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가정상담"
        android:textSize="50px"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/place_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="경남 서부 해바라기센터"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/content_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• 전문영역: 성폭력, 가정폭력, 성매매관련의료, 심리상담, 수사및법률지원"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dodream"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="true">

                <ImageView
                    android:id="@+id/place_2"
                    android:layout_width="71dp"
                    android:layout_height="70dp"
                    android:src="@drawable/dodream" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="상담소명 : 두드림 심리상담센터"/>

                    <TextView
                        android:id="@+id/content_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• 전문영역: 가족상담, 개인상담, 부모교육, 아동상담"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/place_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="미소인 상담센터"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/content_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• 전문영역: 부부상담, 부모상담, 아동청소년상담, 법원이혼상담, 4대폭력피해상담 등"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/place_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="씨앗과 나무"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/content_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• 전문영역: 부부가족상담, 개인상담"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/place_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="인음악 심리상담센터"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/content_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• 전문영역: 아동 및 청소년상담, 개인상담, 부부상담"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/place_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="진주시 건강가정 지원센터"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/content_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• 전문영역: 가족상담, 부부상담, 부모-자녀상담, 한부모자녀상담"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/place_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="진주 심리상담센터"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/content_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• 전문영역: 아동상담, 부부상담"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>