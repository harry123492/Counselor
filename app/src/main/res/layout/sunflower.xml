<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sunflower"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2CB977"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/topicon"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">
            <Button
                android:id="@+id/menu_return"
                android:layout_marginTop="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/returnbutton"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/place_1"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:src="@drawable/logo_haebaragi" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="경남 서부 해바라기센터"
                android:textColor="#2F9D27"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="경상남도 진주시 칠암동 90 " />
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/info_bar"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:background="@drawable/border"
                android:backgroundTint="#2CB977"
                app:itemIconTint="#000000"
                app:itemTextColor="#000000"
                app:layout_constraintEnd_toStartOf="@id/info_bar2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:menu="@menu/info_bar" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/info_bar2"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:background="@drawable/border"
                android:backgroundTint="#2CB977"
                app:itemIconTint="#000000"
                app:itemTextColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toEndOf="@id/info_bar"
                app:layout_constraintTop_toTopOf="parent"
                app:menu="@menu/info_bar2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <FrameLayout
            android:id="@+id/info_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:id="@+id/info_view"
                android:background="#f7f7f7"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/info_sogae"
                        android:layout_width="match_parent"
                        android:layout_height="600dp"
                        android:orientation="vertical"
                        android:background="@drawable/border">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="소개말"
                            android:gravity="center"
                            android:textSize="25dp"
                            android:textColor="#000000"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="경남서부해바라기센터는 여성가족부, 경상남도, 경상남도경찰청, 경상대학교병원4자협약으로 운영되는 여성, 아동폭력 피해자 전담기관입니다. 성폭력, 가정폭력, 성매매 피해자에게 365일 24시간 상담, 의료, 법률, 수사서비스를 통합적으로 지원하고 있으며, 전문상담사, 간호사, 임상심리사, 심리치료사, 경찰관이 사건해결 및 피해자와 가족의 심리적 안정과 치유, 회복을 위해 최선을 다하고 있습니다. 앞으로도 피해자의 인권을 보호하고 안전한 지역사회를 만들기위해 더욱더 노력하겠습니다."
                            android:textSize="20dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/info_annae"
                        android:layout_width="match_parent"
                        android:layout_height="600dp"
                        android:orientation="vertical"
                        android:background="@drawable/border">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="조직도"
                            android:gravity="center"
                            android:textSize="25dp"
                            android:textColor="#000000"
                            android:textStyle="bold" />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/haebaragi_jogic"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/info_jeonmoon"
                        android:layout_width="match_parent"
                        android:layout_height="600dp"
                        android:orientation="vertical"
                        android:background="@drawable/border">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="25dp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="전문영역 및 상담 프로그램" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="20dp"
                            android:text="전문영역: 성폭력, 가정폭력, 성매매관련의료, 심리상담, 수사및법률지원\n프로그램 : 피해자대상-놀이치료, 모래놀이치료, 미술치료, 상담심리치료, 인지행동치료, 집단치료\n보호자대상: 보호자상담치료, 보호자교육\n그외: 성교육, 성폭력예방교육, 사례관리등" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/info_ga"
                        android:layout_width="match_parent"
                        android:layout_height="600dp"
                        android:orientation="vertical"
                        android:background="@drawable/border">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="25dp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="가능한 심리검사" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="20dp"
                            android:text="- 피해아동및지적장애인대상: 투사검사, 그림검사, 지능검사, 정서검사, 행동검사, 자기보고식검사 등
\n- 보호자대상: 정신건강상태검사, 우울증검사, 다면적인성검사, 투사검사등" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/info_map"
                        android:layout_width="match_parent"
                        android:layout_height="600dp"
                        android:orientation="vertical"
                        android:background="@drawable/border">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="25dp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="상담소 위치" />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/haebaragi_map"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>